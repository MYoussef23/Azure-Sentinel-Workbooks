    {
      "type": 3,
      "content": {
        "version": "KqlItem/1.0",
        "query": "let selectedDeviceAction = tostring(\"{DeviceAction_}\");\r\nlet selectedDestinationIP = tostring(\"{Destination_IP}\");\r\nlet Source_IP_value = tostring(\"{Source_IP}\");\r\nlet byteData = CommonSecurityLog\r\n//CommonSecurityLog\r\n| where (selectedDeviceAction == \"All\" or DeviceAction in ({DeviceAction_}))\r\n| where DestinationIP has_any (selectedDestinationIP)\r\n| where SourceIP has_any (Source_IP_value)\r\n| extend NetworkType = case(\r\n    ipv4_is_private(DestinationIP), 'Internal Network (RFC 1918)',\r\n    'Public Network' // Covers public IPs\r\n    )\r\n| project PublicNetwork=iif(NetworkType==\"Public Network\", 1, 0), InternalNetwork=iif(NetworkType==\"Internal Network (RFC 1918)\", 1, 0)\r\n| summarize TotalPublic=sum(PublicNetwork), TotalInternal=sum(InternalNetwork);\r\n// Project into a format suitable for tiles\r\nbyteData\r\n| project Metric = \"Total Public Network Requests\", Value = TotalPublic\r\n| union (\r\n    byteData\r\n    | project Metric = \"Total Internal Network Requests\", Value = TotalInternal\r\n)",
